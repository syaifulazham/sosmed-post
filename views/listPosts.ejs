<!DOCTYPE html>
<html>
<head>
    <title>List of Posts</title>
</head>
<body>
    <h1>Posts</h1>
    <ul>
        <% posts.forEach(function(post) { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <!-- Simplified view; add images and videos as needed -->
                <a href="/posts/edit/<%= post.id %>">Edit</a>
                <!-- Add buttons or links for publishing to social media -->
            </li>
        <% }); %>
    </ul>
</body>
</html>
